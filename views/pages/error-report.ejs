<!DOCTYPE html>
<html lang="es">
<%- include('../partials/header') %>
<body>
    <div class="container mt-4">
        <div class="card bg-dark">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h2>Reporte de Errores Léxicos</h2>
                <a href="/" class="btn btn-outline-light">Volver al Editor</a>
            </div>
            <div class="card-body">
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        Se encontraron <%= errors.length %> errores léxicos
                    </div>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Fila</th>
                                    <th>Columna</th>
                                    <th>Token</th>
                                    <th>Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% errors.forEach((error, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= error.row %></td>
                                        <td><%= error.column %></td>
                                        <td><code class="text-danger">"<%= error.lexeme %>"</code></td>
                                        <td>Token no reconocido</td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-success">
                        No se encontraron errores léxicos en el análisis.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>